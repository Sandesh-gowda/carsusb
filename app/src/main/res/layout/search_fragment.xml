<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/search_car_submit_button"
        android:fitsSystemWindows="true"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_State"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:id="@+id/search_car_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_City"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Make"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Model"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Variant"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>

                <!--mobile number -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_mobile"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/search_car_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"

                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>


                <!--registration number-->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_regnumber"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/search_car_regnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"

                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>

                <!--fule-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Fuel"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_fuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_CarPrice"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_carprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_KMS"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_kms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Age"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:padding="10dp"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Transmission"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_transmission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="18sp" />
                </TableRow>





                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/search_car_Color"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/search_car_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_drop_down_black"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textSize="14sp" />
                </TableRow>


            </TableLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/search_car_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/current_month_bg"
        android:padding="10dp"
        android:singleLine="true"
        android:text="@string/search_car_submit"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp" />


</RelativeLayout>